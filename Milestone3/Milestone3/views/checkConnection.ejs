<!doctype html>

<html lang="en">
<head>

    <title>MovieScope</title><!--Title of each individual page-->
    <%- include('partials/header.ejs') %><!--includes the header page from the partials directory-->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bxslider/4.2.15/jquery.bxslider.min.css" rel="stylesheet" />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bxslider/4.2.15/jquery.bxslider.min.js"></script>


</head>

<body>
<main>
    <div id="content">
        <%- include('partials/nav.ejs') %><!--includes the nav page from the partials directory-->
        <h3 class="center">Events</h3>
            <div>
                <table class="centerTable">
                    <tr>
                        <%for(let j=0; j < data.result.length; j++){%> <!--Displays all of the document data from result document variable.--->
                        <th>
                            <div class="myForm">
                                <img class="centerPic" src="assets/images/FinlLogo.PNG" alt="MoviScope"><br>
                                <p>For: <%=data.result[j].ConnectionType%></p> <!--Lists all connectionTypes in the result document-->
                                <p>Name: <%= data.result[j].Name %></p>
                                <p>Details: <%= data.result[j].Details %></p>
                                <p>Where: <%= data.result[j].Where %></p>
                                <p>When: <%= data.result[j].When %></p>
                            </div>
                        </th>
                        <% } %>
                    </tr>
                </table>
            </div>

    </div>
</main>

<%- include('partials/footer.ejs') %><!--includes the footer page from the partials directory-->

</body>
