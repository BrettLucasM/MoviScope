<!doctype html>

<html lang="en">
<head>

    <title>MovieScope</title><!--Title of each individual page-->
    <%- include('partials/header.ejs') %>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bxslider/4.2.15/jquery.bxslider.min.css" rel="stylesheet" />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bxslider/4.2.15/jquery.bxslider.min.js"></script>


</head>

<body>
<main>
    <div id="content">
    <%- include('partials/nav.ejs') %>
    <form class="centerPostForm" action="/newConnection1" method="post">
        <label for="ConnectionID">Connection ID:</label><br>
        <input type="text" id="connectionID" name="connectionID" value="<%= qs.connectionID %>"><br>
        <label for="director">Director:</label><br>
        <input type="text" id="director" name="director" value="<%= qs.director %>"><br>
        <label for="movie">Movie name:</label><br>
        <input type="text" id="movie" name="movie" value="<%= qs.movie %>"><br>
        <label for="score">Score (1-10):</label><br>
        <input type="number" id="score" name="score" value="<%= qs.score %>"><br>
        <label for="review">Review:</label><br>
        <input type="text" id="review" name="review" value="<%= qs.review %>"><br>

        <input class="button" type="submit" value="Submit">
    </form>
    </div>
</main>

<%- include('partials/footer.ejs') %>

</body>
